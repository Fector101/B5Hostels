    </head>
    <body>
        <header>
            <div class="menu-btn-box">
              <h1>Hostel Manager</h1>
              <button>
                Menu
              </button>
            </div>
            <nav>
                <button class="active">Dashboard</button>
                <button>Students</button>
                <button>Room</button>
            </nav>
            <button class="signout-btn">Sign Out</button>
        </header>
        <div class="welcome-box">
            <h1>Admin Dashboard</h1>
            <p class="dim-text">
                Manage student accommodations and room allocations
            </p>
        </div>
        <div class="cards">
            <div class="card">
                <span class="strip"></span>
                <div class="content">
                    <h3>Total Students</h3>
                    <p>Registered in system</p>
                    <span>6</span>
                </div>
            </div>
            <div class="card">
                <span class="strip"></span>
                <div class="content">
                    <h3>Pending Verification</h3>
                    <p>Awaiting approval</p>
                    <span>3</span>
                </div>
            </div>
            <div class="card">
                <span class="strip"></span>
                <div class="content">
                    <h3>Verified Students</h3>
                    <p>Approved for accommodation</p>
                    <span>2</span>
                </div>
            </div>
            <div class="card">
                <span class="strip"></span>
                <div class="content">
                    <h3>Rejected Students</h3>
                    <p>Not eligible for accommodation</p>
                    <span>1</span>
                </div>
            </div>
            <div class="card">
                <span class="strip"></span>
                <div class="content">
                    <h3>Total Rooms</h3>
                    <p>Available in the hostel</p>
                    <span>8</span>
                </div>
            </div>
            <div class="card">
                <span class="strip"></span>
                <div class="content">
                    <h3>Available Rooms</h3>
                    <p>Ready for allocation</p>
                    <span>6</span>
                </div>
            </div>

        </div>
