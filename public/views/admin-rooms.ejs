<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin Dashboard</title>
        <link rel="stylesheet" href="/css/index.css" />
        <link rel="stylesheet" href="/css/admin.css" />
        <link rel="stylesheet" href="/css/admin-responsive.css" />
        <script defer src="/js/admin-header.js"></script>
        <script defer src="/js/admin-rooms.js"></script>
    </head>
    <body>
        <%- include("admin-header") -%>

        <div class="welcome-box">
            <h2>Room Management</h2>
            <p>View and manage all hostel rooms</p>
        </div>
        <section class="main-content">
            <div class="tabs">
                <button value="room-card" class="active">All Rooms</button>
                <button value="free">Available</button>
                <button value="full">Occupied</button>
                <button value="maintenance">Maintenance</button>
            </div>

            <div class="filters">
                <input type="text" placeholder="Search rooms..." />
                <select class="select-hostel">
                    <option value="room-card">All Blocks</option>
                    <option value="new-hostel">New Hostel</option>
                    <option value="old-hostel">Old Hostel</option>
                </select>
            </div>
            <div class="cards-box">
                <div class="student-card room-card good-strip free new-hostel">
                    <div class="card-header">
                        <div class="student-id-box">
                            <p class="dim-text">Room</p>
                            <p>A-101</p>
                        </div>
                        <span class="badge hostel">Available</span>
                    </div>
                    <div class="info">
                        <div class="row">
                            <p class="dim-text">Block:</p>
                            <p>New Hostel</p>
                        </div>
                        <div class="row">
                            <p class="dim-text">Capacity:</p>
                            <p>1/4</p>
                        </div>

                        <div class="row">
                            <p class="dim-text">Floor:</p>
                            <p>1</p>
                        </div>
                    </div>
                    <div class="amenities-box">
                        <p class="dim-text">Amenities:</p>
                        <div class="con">
                            <div class="sub-container"><p>Wifi</p></div>

                            <div class="sub-container"><p>Desk</p></div>

                            <div class="sub-container"><p>Wardrobe</p></div>

                            <div class="sub-container"><p>Study Area</p></div>
                        </div>
                    </div>
                </div>
                <div class="student-card room-card warning-strip maintenance old-hostel">
                    <div class="card-header">
                        <div class="student-id-box">
                            <p class="dim-text">Room</p>
                            <p>A-111</p>
                        </div>
                        <span class="badge hostel">Maintenance</span>
                    </div>
                    <div class="info">
                        <div class="row">
                            <p class="dim-text">Block:</p>
                            <p>Old Hostel</p>
                        </div>
                        <div class="row">
                            <p class="dim-text">Capacity:</p>
                            <p>1/4</p>
                        </div>

                        <div class="row">
                            <p class="dim-text">Floor:</p>
                            <p>1</p>
                        </div>
                    </div>
                    <div class="amenities-box">
                        <p class="dim-text">Amenities:</p>
                        <div class="con">
                            <div class="sub-container"><p>Wifi</p></div>

                            <div class="sub-container"><p>Desk</p></div>

                            <div class="sub-container"><p>Study Area</p></div>
                        </div>
                    </div>
                </div>
                <div class="student-card room-card bad-strip full new-hostel">
                    <div class="card-header">
                        <div class="student-id-box">
                            <p class="dim-text">Room</p>
                            <p>A-101</p>
                        </div>
                        <span class="badge hostel">Occupied</span>
                    </div>
                    <div class="info">
                        <div class="row">
                            <p class="dim-text">Block:</p>
                            <p>New Hostel</p>
                        </div>
                        <div class="row">
                            <p class="dim-text">Capacity:</p>
                            <p>4/4</p>
                        </div>

                        <div class="row">
                            <p class="dim-text">Floor:</p>
                            <p>2</p>
                        </div>
                    </div>
                    <div class="amenities-box">
                        <p class="dim-text">Amenities:</p>
                        <div class="con">
                            <div class="sub-container"><p>Wifi</p></div>

                            <div class="sub-container"><p>Study Area</p></div>
                        </div>
                    </div>
                </div>
                <div class="student-card room-card bad-strip full old-hostel">
                    <div class="card-header">
                        <div class="student-id-box">
                            <p class="dim-text">Room</p>
                            <p>A-101</p>
                        </div>
                        <span class="badge hostel">Occupied</span>
                    </div>
                    <div class="info">
                        <div class="row">
                            <p class="dim-text">Block:</p>
                            <p>Old Hostel</p>
                        </div>
                        <div class="row">
                            <p class="dim-text">Capacity:</p>
                            <p>4/4</p>
                        </div>

                        <div class="row">
                            <p class="dim-text">Floor:</p>
                            <p>2</p>
                        </div>
                    </div>
                    <div class="amenities-box">
                        <p class="dim-text">Amenities:</p>
                        <div class="con">
                            <div class="sub-container"><p>Wifi</p></div>

                            <div class="sub-container"><p>Study Area</p></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>
