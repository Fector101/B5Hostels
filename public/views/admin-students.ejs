<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin Dashboard</title>
        <link rel="stylesheet" href="/css/index.css" />
        <link rel="stylesheet" href="/css/admin.css" />
        <link rel="stylesheet" href="/css/admin-responsive.css" />
        <script defer src="/js/admin-header.js"></script>
 <script defer src="/js/admin-students.js"></script>
    </head>
    <body>
        <div id="notification" class="notification"></div>
        <div class="flex cover display-none">
            <div class="allocation-box">
                <button class="close-btn">X</button>
                <h1>Room Allocation</h1>
                <p class="header-caption dim-text">
                    Assign a room to Evelyn (FT23CMP0007)
                </p>
                <p>Available Rooms (6)</p>
                <div class="rooms-box"></div>
            </div>
        </div>
        <%- include("admin-header") -%>

        <div class="welcome-box">
            <h2>Student Management</h2>
            <p>Verify, reject, and assign rooms to students</p>
        </div>

        <section class="main-content">
            <div class="tabs">
                <button class="active">All Students</button>
                <button>Pending</button>
                <button>Verified</button>
                <button>Paid</button>
            </div>

            <div class="filters">
                <input type="text" placeholder="Search students..." />
                <select>
                    <option>All Levels</option>
                </select>
            </div>
            <div class="cards-box">

            <div class="student-card verified">
                <div class="card-header">
                    <div class="student-id-box">
                        <p class="dim-text">Student ID</p>
                        <p>UG2023001</p>
                    </div>
                    <span class="badge undergraduate">100 LVL</span>
                </div>
                <div class="name-box">
                    <div class="avatar">ES</div>
                    <div>
                        <h3>Evelyn Samuel</h3>
                        <p class="email">nevan@gmail.com</p>
                    </div>
                </div>
                <div class="info">
                    <div class="row">
                        <p class="dim-text">Status:</p>
                        <p>Verified</p>
                    </div>
                    <div class="row">
                        <p class="dim-text">Room:</p>
                        <p>R001</p>
                    </div>

                    <div class="row">
                        <p class="dim-text">Preference:</p>
                        <p>None</p>
                    </div>
                </div>
                <div class="btns-box">
                    <!--<button class="assign-btn">Assign Room</button>
                  <button class="random-room-btn">Random Room</button>
                  -->
                    <!--
                  <button class="assign-btn">Verify</button>
                  <button class="reject-room-btn">Reject</button>
                  -->
                    <button disabled class="assigned-room-btn">
                        Room Assigned
                    </button>
                </div>
            </div>
            <div class="student-card pending">
                <div class="card-header">
                    <div class="student-id-box">
                        <p class="dim-text">Student ID</p>
                        <p>UG2023001</p>
                    </div>
                    <span class="badge undergraduate">100 LVL</span>
                </div>
                <div class="name-box">
                    <div class="avatar">ES</div>
                    <div>
                        <h3>Evelyn Samuel</h3>
                        <p class="email">nevan@gmail.com</p>
                    </div>
                </div>
                <div class="info">
                    <div class="row">
                        <p class="dim-text">Status:</p>
                        <p>Rejected</p>
                    </div>
                    <div class="row">
                        <p class="dim-text">Room:</p>
                        <p>Not assigned</p>
                    </div>

                    <div class="row">
                        <p class="dim-text">Preference:</p>
                        <p>None</p>
                    </div>
                </div>
                <div class="btns-box">
                    <!--<button class="assign-btn">Assign Room</button>
                  <button class="random-room-btn">Random Room</button>
                  -->
                    <button class="assign-btn">Verify</button>
                    <button class="reject-room-btn">Reject</button>
                </div>
            </div>
            <div class="student-card">
                <div class="card-header">
                    <div class="student-id-box">
                        <p class="dim-text">Student ID</p>
                        <p>UG2023001</p>
                    </div>
                    <span class="badge undergraduate">100 LVL</span>
                </div>
                <div class="name-box">
                    <div class="avatar">ES</div>
                    <div>
                        <h3>Evelyn Samuel</h3>
                        <p class="email">nevan@gmail.com</p>
                    </div>
                </div>
                <div class="info">
                    <div class="row">
                        <p class="dim-text">Status:</p>
                        <p>Rejected</p>
                    </div>
                    <div class="row">
                        <p class="dim-text">Room:</p>
                        <p>Not assigned</p>
                    </div>

                    <div class="row">
                        <p class="dim-text">Preference:</p>
                        <p>None</p>
                    </div>
                </div>
                <div class="btns-box">
                    <button class="assign-btn">Assign Room</button>
                    <button class="random-room-btn">Random Room</button>
                </div>
            </div>
        </div>
        </section>
    </body>
</html>
