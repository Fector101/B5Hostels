<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title> <%= name %> Profile</title>
    <link rel="stylesheet" href="css/header.css" />
   <link rel="stylesheet" href="css/profile.css" />
</head>
<body>

    <%- include("header") -%>
    <div class="dashboard">
        <!-- Profile Section -->
        <div class="profile">
            <img src="profile.jpg" alt="User Profile">
            <h2>Hi,  <%= name %></h2>
            <p>FT23CMP0040</p>
        </div>

        <!-- Progress Section -->
        <div class="progress-section">
            <div class="progress-info">
                <span class="level">Days Completed</span>
                <span class="progress-text">220/300 Days</span>
            </div>
            <div class="progress-bar">
                <div class="progress-fill" style="width: 73%;"></div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="stats">
            <div class="stat-box">
                <p>100</p>
                <span>Level</span>
            </div>
            <div class="stat-box">
              
        <p> <%= room %></p>
        <span>Hostel Room</span>
              
            </div>
            <div class="stat-box">
              <p>
                $500k
              </p>
              <span>
                Paid Dues
              </span>
            </div>
        </div>

<div class="room-details">
  <h3>Room Details</h3>
  <p><strong>Location:</strong> New Hostel</p>
  <p><strong>Amenities:</strong> Wi-Fi, Study Desk, Air Conditioning</p>
  <p><strong>Security:</strong> 24/7 Security, Gated Entry</p>
</div>

<!-- Roommates Section -->
<div class="roommates">
  <h3>Roommates</h3>
  <div class="roommate-list">
    <div class="roommate">
      <img src="profile.jpg" alt="John Doe">
      <p>John</p>
    </div>
    <div class="roommate">
      <img src="profile.jpg" alt="Sarah Lee">
      <p>Sarah</p>
    </div>
    <div class="roommate">
      <img src="profile.jpg" alt="Michael Smith">
      <p>Michael</p>
    </div>
  </div>
</div>

        <!-- Action Buttons -->
        <div class="actions">
            <button onclick="extendStay()">View Payment History</button>
            <button onclick="requestMaintenance()">Report Issue</button>
        </div>

    </div>

</body>
</html>